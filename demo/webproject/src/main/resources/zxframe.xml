<?xml version="1.0" encoding="UTF-8"?>
<zxframe>
	<!-- 控制台输出sql -->
	<showsql>false</showsql>
	<!-- 控制台输出缓存日志 -->
	<showcache>false</showcache>
	<!-- 使用DB配置properties，支持全服务热更新，需开启useZXTask -->
	<!-- SpringcloudConfigServer高可用成本较高，本功能只为降低成本，可选用 -->
	<useDBProperties>true</useDBProperties>
	<!-- 使用ZXtask定时器 -->
	<useZXTask>true</useZXTask>
	<!-- druid数据源配置 -->
	<druid>
		<!-- 公共数据源配置 -->
		<common>
			<username>root</username>
			<password>mysql*()</password>
			<pattern>rw</pattern><!-- rw:读写都使用这个数据源  w:写使用这个数据源 r:读使用这个数据源 -->
			<driver-class-name>com.mysql.cj.jdbc.Driver</driver-class-name>
			<type>com.alibaba.druid.pool.DruidDataSource</type>
			<filters>stat</filters><!-- 监控统计:stat, 防御sql注入:wall  -->
			<initialSize>10</initialSize>
			<minIdle>10</minIdle>
			<maxActive>200</maxActive>
			<testOnBorrow>false</testOnBorrow>
			<testOnReturn>false</testOnReturn>
			<testWhileIdle>true</testWhileIdle>
		</common>
		<!-- 具体的数据源配置 -->
		<datasources>
			<datasource>
				<dsname>default</dsname><!-- default为Model无注解标识使用数据源时，默认使用这项 -->
				<url><![CDATA[jdbc:mysql://127.0.0.1:3300?characterEncoding=UTF-8&useSSL=false]]></url>
			</datasource>
		</datasources>
	</druid>
	<!-- 缓存配置 -->
